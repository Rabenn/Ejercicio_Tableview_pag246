<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="es.ruben.controladores.Controlador_Tabla"
      prefHeight="600" prefWidth="400" spacing="10" styleClass="main-root">

    <!-- GridPane de entradas -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="80"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
            <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
            <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
            <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        </rowConstraints>

        <!-- First Name y BotÃ³n Add -->
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="TextoFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button fx:id="BotonAdd" text="Add"
                GridPane.rowIndex="0" GridPane.columnIndex="2"
                maxWidth="Infinity" onAction="#onaddClicked"/>

        <!-- Last Name -->
        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="TextoLastName" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"
                   HBox.hgrow="ALWAYS" maxWidth="Infinity"/>

        <!-- Birth Date -->
        <Label text="Birth Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="Dates" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"
                    HBox.hgrow="ALWAYS" maxWidth="Infinity"/>

        <!-- Botones Restore y Delete -->
        <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <Button fx:id="botonRestore" text="Restore Rows"
                    HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onRestoreClicked"/>
            <Button fx:id="botonDelete" text="Delete Selected Rows"
                    HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onDeleteClicked"/>
        </HBox>
    </GridPane>

    <!-- Tabla -->
    <TableView fx:id="tablaPersonas" prefHeight="436.0" prefWidth="302.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
            <TableColumn fx:id="colFirstName" prefWidth="100.0" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="100.0" text="Last Name" />
            <TableColumn fx:id="colBirthDate" prefWidth="120.0" text="Birth Date" />
        </columns>
    </TableView>
</VBox>
